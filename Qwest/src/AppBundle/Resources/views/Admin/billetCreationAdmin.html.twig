{% extends "@App/adminLayout.html.twig" %}

{% block title %}
    {{ parent() }} - Rédaction d{{ "'" }}un billet
{% endblock %}

{% block StockHG3body %}
    <h1>Rédaction d'un billet</h1>
    <div class="conteneur">
        <div class="formulaire">
            <div class="edition">
                {{ form_start(form, {"attr": {"class": "form-horizontal"}}) }}
                {{ form_errors(form) }}

                {{ form_label(form.titre, "Votre titre:") }}
                {{ form_widget(form.titre) }}
                {{ form_row(form.titre) }}
                
                <br/>

                {{ form_label(form.contenu, "Votre contenu:") }}
                {{ form_widget(form.contenu) }}
                {{ form_row(form.contenu) }}

                <div class="submit">
                    {{ form_widget(form.envoyer) }}
                </div>

                {{ form_rest(form) }}

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}