{% extends "@App/adminLayout.html.twig" %}

{% block title %}
    {{ parent() }} - Transformation d'une proposition
{% endblock %}

{% block StockHG3body %}
    
    <h1>Transformation d'une proposition</h1>
    <div class="conteneur">
        {% for message in app.session.flashbag.get('message') %}
            {{ message | raw }}
        {% endfor %}
        <div class="formulaire">
            <div class="edition">
                {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                {{ form_errors(form) }}

                {{ form_label(form.corps, "Texte de l\'association:") }}
                {{ form_widget(form.corps) }}
                {{ form_row(form.corps) }}

                {{ form_label(form.nbPoint, "Points attribués:") }}
                {{ form_widget(form.nbPoint) }}
                {{ form_row(form.nbPoint) }}

                <div class="choix">
                    {{ form_widget(form.verite) }}
                    {{ form_row(form.verite) }}
                </div>

                {{ form_label(form.commentaire, "Commentaire à la correction:") }}
                {{ form_widget(form.commentaire) }}
                {{ form_row(form.commentaire) }}

                <p class="attention">Attention! Si vous confirmez l'envoie, la ressource associée sera détruite.</p>

                <div class="submit">
                    {{ form_widget(form.envoyer) }}
                    <a class="bouton-lien-80 neutre classique-neutre" href="{{ path("question-liste", {"id": entite.question.exercice.id }) }}#{{ entite.question.numeroOrdre }}">Retourner à la liste des questions</a>
                </div>

                {{ form_rest(form) }}

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}