{% extends "@App/publicLayout.html.twig" %}

{% block description %}
    {{ parent() }}Page de connection
{% endblock %}

{% block title %}
    {{ parent() }} - Connection
{% endblock %}

{% block StockHG3body %}
    <div class="conteneur taille-conteneur">
        <h1>Connection</h1>
        {% for message in app.session.flashBag.get("erreur") %}
            <p class="erreur-marge-0">{{ message }}</p>
        {% endfor %}
        
        <div class="formulaire">
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
            {{ form_errors(form) }}

            {{ form_label(form.pseudo, "Votre pseudo:") }}
            {{ form_widget(form.pseudo) }}
            {{ form_row(form.pseudo) }}

            {{ form_label(form.motDePasse, "Votre mot de passe:") }}
            {{ form_widget(form.motDePasse) }}
            {{ form_row(form.motDePasse) }}

            {{ captcha.creerCaptcha() | raw }}

            <div class="submit">
                {{ form_widget(form.envoyer) }}
            </div>

            {{ form_rest(form) }}

            {{ form_end(form) }}
        </div>
    </div>

    <script src='https://www.google.com/recaptcha/api.js'></script>
{% endblock %}